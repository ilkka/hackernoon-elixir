{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "mix",
    "isShellCommand": true,
    "showOutput": "always",
    "tasks": [
        {
            "taskName": "build",
            "args": [
                "compile"
            ],
            "problemMatcher": [
                "$mixCompileError",
                "$mixCompileWarning"
            ],
            "isBuildCommand": true
        },
        {
            "taskName": "test",
            "args": [
                "test"
            ],
            "problemMatcher": [
                "$mixCompileError",
                "$mixCompileWarning"
            ],
            "isTestCommand": true
        }
    ]
}